---
import { Image } from "astro:assets";
import logo from "../../assets/favicon.png";
import ThemeToggle from "./ThemeToggle.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="top-bar screen-only">
  <div class="heading">
    <a href="/"
      ><Image
        src={logo}
        height={32}
        width={32}
        alt="BotC Script Viewer"
        quality="max"
        format="png"
      /></a
    >
    <h1 class="top-title">{title}</h1>
  </div>

  {
    Astro.slots.has("items-start") && (
      <div class="items items-start">
        <slot name="items-start" />
      </div>
    )
  }

  <ThemeToggle />
</header>

<style>
  .top-bar {
    position: relative;
    display: flex;
    align-items: center;
    border-block-end: 2px solid var(--color-control-border-active);
    padding-inline-start: 8px;
    padding-inline-end: 32px;
    gap: 8px;
    flex-wrap: wrap;
  }

  .heading {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .top-title {
    font-size: 24px;
  }

  .items {
    padding-block: 4px;
    padding-inline: 4px;
  }

  .space {
    flex-grow: 1;
  }
</style>
