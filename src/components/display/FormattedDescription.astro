---
import { parseRichDescription } from "../../lib/characters";
import ReminderToken from "../svelte/common/ReminderToken.svelte";

export interface Props {
  content: string;
}

const { content } = Astro.props;

const parts = parseRichDescription(content);
---

<span
  >{
    parts.map((part) => {
      switch (part.type) {
        case "bold":
          return <strong>{part.content}</strong>;
        case "square":
          return <strong>[{part.content}]</strong>;
        case "colon":
          return <ReminderToken />;
        case "regular":
        default:
          return part.content;
      }
    })
  }</span
>
