---
import type { ScriptCharacter } from "../../../generated/script-schema";
import CharacterIcon from "../CharacterIcon.astro";

export interface Props {
  character?: ScriptCharacter;
}

const { character } = Astro.props;
---

<span class="reminder">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="reminder-background"
    aria-label="Reminder: "
  >
    <use x="12" y="12" href="#reminder"></use>
  </svg>{
    character && (
      <CharacterIcon
        character={character}
        size={24}
        class="reminder-character-icon"
      />
    )
  }
</span>

<style>
  .reminder {
    position: relative;
  }

  .reminder-background {
    display: inline;
    width: 1.5rem;
    height: 1.5rem;
    vertical-align: bottom;
    vertical-align: text-bottom;
    fill: var(--color-reminder);
    stroke: var(--color-reminder-border);
  }

  .reminder-character-icon {
    display: inline-block;
    position: absolute;
    top: 0;
    left: 0;
  }
</style>
