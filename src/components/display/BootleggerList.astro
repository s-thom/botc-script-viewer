---
import { CHARACTERS_BY_ID } from "../../lib/characters";
import CharacterListItem from "./CharacterListItem.astro";

export interface Props {
  rules: string[];
  class?: string;
}

const { rules, class: className } = Astro.props;
---

<ul class:list={["bootlegger-list", className]} id="bootlegger">
  {
    rules &&
      rules.map((rule) => (
        <li class="bootlegger-list-item">
          <CharacterListItem
            character={CHARACTERS_BY_ID.get("bootlegger")!}
            description={rule}
          />
        </li>
      ))
  }
</ul>

<style>
  .bootlegger-list {
    list-style: none;
    padding-inline-start: 0;
    margin-block: 1rem;
    columns: 24rem;
    column-gap: 1rem;
  }

  .bootlegger-list-item {
    break-inside: avoid-column;

    &:not(:first-child) {
      margin-block-start: 1rem;
    }

    &:not(:last-child) {
      margin-block-end: 1rem;
    }
  }
</style>
